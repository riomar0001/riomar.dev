{
  "$schema": "http://json.schemastore.org/prettierrc",
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "printWidth": 160,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "none",
  "importOrder": [
    "^react$",
    "^react-dom$",
    "^[a-z]",
    "^@[^/]",
    "^@/assets/(.*)$",
    "^@/amplify/(.*)$",
    "^@/components/(.*)$",
    "^@/utils/(.*)$",
    "^@/hooks/(.*)$",
    "^@/styles/(.*)$",
    "^@/types/(.*)$",
    "^[./]|[.](css|scss)$",
    ".*"
  ],
  "overrides": [
    {
      "files": ["**/*.yml"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
